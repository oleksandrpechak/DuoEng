SECRET_KEY=change-me
ENV=production
# Render Postgres Internal URL example:
# DATABASE_URL=postgresql://user:pass@host:5432/db_name
DATABASE_URL=sqlite:///./duoeng.db
PORT=8000
CORS_ORIGINS=http://localhost:3000
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
TURN_TIMEOUT_SECONDS=30
ROOM_CODE_LENGTH=8
ROOM_CODE_ATTEMPTS=12
LLM_API_URL=
LLM_API_KEY=
LLM_TIMEOUT=1.5
LLM_CACHE_TTL_SECONDS=86400
ENABLE_LLM_SCORING=true
GOOGLE_APPLICATION_CREDENTIALS=/etc/secrets/gcp-key.json
GEMINI_PROJECT=
GEMINI_LOCATION=us-central1
GEMINI_MODEL=gemini-2.0-flash
GEMINI_MAX_OUTPUT_TOKENS=512
GEMINI_TEMPERATURE=0.2
DICTIONARY_REPO_URL=https://github.com/pavlo-liapin/kindle-eng-ukr-dictionary.git
RATE_LIMIT_REQUESTS_PER_MIN=60
RATE_LIMIT_SUBMITS_PER_MIN=40
RATE_LIMIT_WS_MESSAGES_PER_MIN=120
REDIS_URL=redis://localhost:6379/0
DEFAULT_ELO=1000
K_FACTOR=32
BAN_SECONDS=300
MAX_JOIN_FAILURES_PER_MIN=12
SUSPICIOUS_ATTEMPTS_PER_MIN=8
TARGET_SCORE_DEFAULT=10
ADMIN_NICKNAMES=admin
ENABLE_PROMETHEUS_METRICS=true
FARM_WINS_PER_MIN_THRESHOLD=5
LOG_LEVEL=INFO
