# ── DuoEng Backend Environment Variables ──
# Copy this file to .env and fill in real values for production.

# Runtime environment (development | production)
ENV=development

# CRITICAL: Set a strong random secret for production.
# Generate one with:  python -c "import secrets; print(secrets.token_urlsafe(48))"
SECRET_KEY=

# JWT settings
JWT_ALGORITHM=HS256
JWT_EXP_MINUTES=720

# Database (PostgreSQL in production, SQLite for local dev)
DATABASE_URL=sqlite:///./duoeng.db

# Frontend origin for CORS (comma-separated if multiple)
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000

# Debug mode (disable in production)
DEBUG=false

# Server port
PORT=8000

# Turn timeout in seconds
TURN_TIMEOUT_SECONDS=30

# LLM scoring service
LLM_API_URL=
LLM_API_KEY=
LLM_TIMEOUT=1.5
ENABLE_LLM_SCORING=true
LLM_CACHE_TTL_SECONDS=86400

# Gemini / Vertex AI
GOOGLE_APPLICATION_CREDENTIALS=
GEMINI_PROJECT=
GEMINI_LOCATION=us-central1
GEMINI_MODEL=gemini-2.0-flash
GEMINI_MAX_OUTPUT_TOKENS=512
GEMINI_TEMPERATURE=0.2

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MIN=60
RATE_LIMIT_SUBMITS_PER_MIN=40
RATE_LIMIT_WS_MESSAGES_PER_MIN=120

# Redis (optional, for distributed rate limiting)
REDIS_URL=redis://localhost:6379/0

# ELO system
DEFAULT_ELO=1000
K_FACTOR=32

# Ban duration in seconds
BAN_SECONDS=300

# Admin nicknames (comma-separated, lowercase)
ADMIN_NICKNAMES=admin

# Prometheus metrics
ENABLE_PROMETHEUS_METRICS=true

# Logging
LOG_LEVEL=INFO
